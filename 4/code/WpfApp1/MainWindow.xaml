        <Button Content="О нас" Grid.Column="1" HorizontalAlignment="Left" Margin="278,360,0,0" VerticalAlignment="Top" FontFamily="Montserrat" FontSize="18" Background="{x:Null}" Foreground="White" RenderTransformOrigin="0.987,0.532" BorderBrush="{x:Null}" Height="26" Width="56" Click="Button_Click"/>
        <Button Content="Регистрация" Grid.Column="1" Margin="0,360,265,0" VerticalAlignment="Top" FontFamily="Montserrat" FontSize="18" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Height="26" HorizontalAlignment="Right" Width="125" Click="Button_Click_1"/>

    </Grid>
</Window>

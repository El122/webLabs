    <Grid x:Name="Some_App">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush TileMode="FlipX" ImageSource="/5boBuXvGJ-8.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label Content="Welcome to Some App" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Puppies Play" FontSize="72" Foreground="White" Grid.Column="1" Height="82" Width="440">
            <Label.Effect>
                <BlurEffect/>
            </Label.Effect>
        </Label>
        <Label Content="Welcome to Some App" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Puppies Play" FontSize="72" Foreground="White" Grid.Column="1" Height="82" Width="440">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <TextBlock Margin="138,178,138,0" Text="У местных богов была дурная привычка ходить по домам атеистов и бить стекла. " TextWrapping="Wrap" Foreground="White" FontFamily="Montserrat" FontSize="18" TextAlignment="Center" Height="44" VerticalAlignment="Top" Grid.Column="1"/>
